<Window x:Class="WpfDesigb.AddEditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDesigb"
        mc:Ignorable="d"
        Title="AddEditProduct" Height="450" Width="700">
    <Grid>
        <StackPanel Margin="20">
            <DockPanel Margin="10">
                <Label Margin="10">ProductName :</Label>
                <TextBox HorizontalAlignment="Right" Width="500" Name="tbProductname"></TextBox>
            </DockPanel>
            <DockPanel Margin="10">
                <Label Margin="10">Price :</Label>
                <TextBox HorizontalAlignment="Right" Width="500" Name="tbProductPrice"></TextBox>
            </DockPanel>
            <DockPanel Margin="70" HorizontalAlignment="Right">
                <Button Margin="30" Height="50" Width="120" Name="btnCancel" Background="LightBlue" Click="btnCancel_Click">Cancel</Button>
                <Button Margin="10" Height="50" Width="120" Name="btnSave" Background="LightGreen" Click="btnSave_Click" >Save</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
